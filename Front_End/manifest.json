{
  "manifest_version": 2,
  "name": "URLCount",
  "description": "Sample extension to show URL count in a page",
  "version": "1.0",
  "icons": {
    "128": "/img/icon128.png",
    "48": "/img/icon48.png",
    "16": "/img/icon16.png"
  },

  "browser_action": {
    "default_icon": "/img/gray.png",
    "default_popup": "content.html"
  },

  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
    }
  ]
}